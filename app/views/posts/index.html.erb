<p id="notice"><%= notice %></p>

<h1 style= "color:white"> Articulos de Orientacion Familiar</h1>
    <div class= "d-flex justify-content-center">
    <div class=  "social-share-button">
      <a href=""><%= image_tag("http://aux2.iconspalace.com/uploads/sharethis-icon-256-1927422772.png", class:" share-button ssb-icon") %></a>
        <a href=""><%= image_tag("https://cdn3.iconfinder.com/data/icons/2018-social-media-logotypes/1000/2018_social_media_popular_app_logo_instagram-512.png", class:" share-button ssb-icon") %></a>
    <%= rails_social_share_button_tag(request.original_url + ' Audios de Orientacion Familiar '  , url: request.original_url, desc: " Lee nuestros Articulos y blogs Orientacion Familiar Una Guia Para El Hogar; TV, Radio, Reflexiones, Dr Jose Gil Abreu") %>
 
</div>
    </div>
<br>

<div class= "row" style= "color:black">
<% @posts.each do |post| %>
    <div class = "col sm-6">
    <div class="card " style="width: 18rem; flex:left">
        <%= link_to post do %>
           <%= image_tag  post.main_image_post_url,  class: "card-img-top" %>
        <% end %>
        <div class="card-body">
        <h5 class="card-title"><%= post.main_title %></h5>
        <p class="card-text"><%= post.main_content.truncate(150) %></p>
                <div class="author">
                 <%= 'By: ' + post.author %>
                </div>
        </div>        
    </div>
                    <%= link_to 'Leer', post %>
                    <% if current_user == post.user %>
                    <%= link_to 'Editar', edit_post_path(post) %>
                    <%= link_to 'Eliminar', post, method: :delete, data: { confirm: 'Are you sure?' } %>
                    <% end %>
       </div>            
    <% end %>
    </div>
    <div class = "col sm-12">
        <h3 style = "color:white"><%= link_to 'Postear nuevo Articulo  ', new_post_path, style:"color:white" %>  ||  <%= link_to 'Volver a inicio', root_path, style:"color:white" %> </h3>
    </div>



</div>



<script>


  const shareButton = document.querySelector('.share-button');

  shareButton.addEventListener('click', event => {
    if (navigator.share) { 
     navigator.share({
        title: ' Articulos Orientacion Familiar una Guia para el Hogar',
        url: '<%= request.original_url %>'
      }).then(() => {
        console.log('Thanks for sharing!');
      })
      .catch(console.error);
      } else {

      }
  });

</script>
   




